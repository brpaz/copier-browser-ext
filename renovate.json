{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "prHourlyLimit": 5,
    "prConcurrentLimit": 20,
    "labels": [
        "dependencies"
    ],
    "reviewers": [
        "brpaz"
    ],
    "github-actions": {
        "fileMatch": [
            "(^|/)\\.github/workflows/[^/]+\\.ya?ml$",
            "(^|/)\\.github/workflows/[^/]+\\.ya?ml\\.jinja$"
        ]
    },
    "npm": {
        "managerFilePatterns": [
            "/template/\\{\\{extension_slug}}/package.json.jinja$/"
        ]
    }
}
