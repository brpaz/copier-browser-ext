{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "prHourlyLimit": 5,
    "prConcurrentLimit": 20,
    "labels": [
        "dependencies"
    ],
    "reviewers": [
        "brpaz"
    ],
    "github-actions": {
        "fileMatch": [
            "(^|/)\\.github/workflows/[^/]+\\.ya?ml$",
            "(^|/)\\.github/workflows/[^/]+\\.ya?ml\\.jinja$"
        ]
    },
    "regexManagers": [
        {
            "fileMatch": [
                "^template/{{project_slug}}/package\\.json\\.jinja$"
            ],
            "matchStrings": [
                "\\\"dependencies\\\"\\s*:\\s*\\{[\\s\\S]*?\\\"(?<depName>[@a-zA-Z0-9_./-]+)\\\"\\s*:\\s*\\\"(?<currentValue>[^\\\"]+)\\\"",
                "\\\"devDependencies\\\"\\s*:\\s*\\{[\\s\\S]*?\\\"(?<depName>[@a-zA-Z0-9_./-]+)\\\"\\s*:\\s*\\\"(?<currentValue>[^\\\"]+)\\\""
            ],
            "datasourceTemplate": "npm"
        }
    ]
}